<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.tonkar.volleyballreferee.ui.history.SetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size"
            app:cardBackgroundColor="@color/colorBackgroundCardview">

            <FrameLayout
                android:id="@+id/ladder_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </FrameLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                style="@style/CardView.Light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBackgroundCardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/tiny_margin_size"
                        android:layout_marginLeft="@dimen/set_title_margin_size"
                        android:layout_marginStart="@dimen/set_title_margin_size"
                        android:layout_marginTop="@dimen/tiny_margin_size"
                        android:gravity="center|start"
                        android:text="@string/confirm_lineup_title"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextViewTheme"
                        android:textSize="@dimen/default_text_size"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <view
                            android:id="@+id/home_team_lineup"
                            class="com.tonkar.volleyballreferee.ui.ExpandedGridView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/small_margin_size"
                            android:layout_marginLeft="@dimen/small_margin_size"
                            android:layout_marginRight="@dimen/small_margin_size"
                            android:layout_marginStart="@dimen/small_margin_size"
                            android:layout_weight="1"
                            android:numColumns="3"/>

                        <view
                            android:id="@+id/guest_team_lineup"
                            class="com.tonkar.volleyballreferee.ui.ExpandedGridView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/small_margin_size"
                            android:layout_marginLeft="@dimen/small_margin_size"
                            android:layout_marginRight="@dimen/small_margin_size"
                            android:layout_marginStart="@dimen/small_margin_size"
                            android:layout_weight="1"
                            android:numColumns="3"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardView.Light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBackgroundCardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/tiny_margin_size"
                        android:layout_marginLeft="@dimen/set_title_margin_size"
                        android:layout_marginStart="@dimen/set_title_margin_size"
                        android:layout_marginTop="@dimen/tiny_margin_size"
                        android:gravity="center|start"
                        android:text="@string/substitutions_tab"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextViewTheme"
                        android:textSize="@dimen/default_text_size"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <view
                            android:id="@+id/home_team_substitutions"
                            class="com.tonkar.volleyballreferee.ui.ExpandedListView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/default_margin_size"
                            android:layout_marginLeft="@dimen/default_margin_size"
                            android:layout_marginRight="@dimen/default_margin_size"
                            android:layout_marginStart="@dimen/default_margin_size"
                            android:layout_weight="1"/>

                        <view
                            android:id="@+id/guest_team_substitutions"
                            class="com.tonkar.volleyballreferee.ui.ExpandedListView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/default_margin_size"
                            android:layout_marginLeft="@dimen/default_margin_size"
                            android:layout_marginRight="@dimen/default_margin_size"
                            android:layout_marginStart="@dimen/default_margin_size"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                style="@style/CardView.Light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorBackgroundCardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/tiny_margin_size"
                        android:layout_marginLeft="@dimen/set_title_margin_size"
                        android:layout_marginStart="@dimen/set_title_margin_size"
                        android:layout_marginTop="@dimen/tiny_margin_size"
                        android:gravity="center|start"
                        android:text="@string/timeouts_tab"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextViewTheme"
                        android:textSize="@dimen/default_text_size"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <view
                            android:id="@+id/home_team_timeouts"
                            class="com.tonkar.volleyballreferee.ui.ExpandedListView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/default_margin_size"
                            android:layout_marginLeft="@dimen/default_margin_size"
                            android:layout_marginRight="@dimen/default_margin_size"
                            android:layout_marginStart="@dimen/default_margin_size"
                            android:layout_weight="1"/>

                        <view
                            android:id="@+id/guest_team_timeouts"
                            class="com.tonkar.volleyballreferee.ui.ExpandedListView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/default_margin_size"
                            android:layout_marginLeft="@dimen/default_margin_size"
                            android:layout_marginRight="@dimen/default_margin_size"
                            android:layout_marginStart="@dimen/default_margin_size"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
