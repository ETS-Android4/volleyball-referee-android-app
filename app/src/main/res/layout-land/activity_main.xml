<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonkar.volleyballreferee.ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin_size"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorBackgroundCardview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/tiny_margin_size"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/indoor_game_image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/indoor" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/start_indoor_6x6_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_6x6"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startIndoorGame"
                                android:text="@string/new_volleyball_game" />

                            <Button
                                android:id="@+id/start_indoor_4x4_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_4x4"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startIndoor4x4Game"
                                android:text="@string/new_volleyball_game" />

                            <Button
                                android:id="@+id/start_score_based_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_volley_ball"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startScoreBasedGame"
                                android:text="@string/new_score_based_game" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin_size"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorBackgroundCardview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/tiny_margin_size"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/beach_game_image"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/main_image_height"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/beach" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/start_beach_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_sun"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startBeachGame"
                                android:text="@string/new_beach_volleyball_game" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin_size"
                    android:layout_weight="3"
                    app:cardBackgroundColor="@color/colorBackgroundCardview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/tiny_margin_size"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/misc_game_image"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:srcCompat="@mipmap/ic_launcher_foreground" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/start_time_based_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_time_based"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startTimeBasedGame"
                                android:text="@string/new_time_based_game" />

                            <Button
                                android:id="@+id/start_scheduled_code_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_scheduled_code"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startScheduledGame"
                                android:text="@string/new_scheduled_game" />

                            <Button
                                android:id="@+id/start_scheduled_list_game_button"
                                style="@style/MainActivityButton.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_margin_size"
                                android:drawableLeft="@drawable/ic_scheduled_list"
                                android:drawablePadding="@dimen/small_margin_size"
                                android:onClick="startScheduledGame"
                                android:text="@string/new_scheduled_games" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/colorAccent"
        app:itemTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:itemTextColor="@color/colorPrimaryText"
        app:menu="@menu/navigation_menu_main">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>