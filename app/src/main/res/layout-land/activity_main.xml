<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonkar.volleyballreferee.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorBackgroundCardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/indoor_game_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_image_height"
                    android:contentDescription="@string/indoor_description"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/indoor"/>

                <TextView
                    android:id="@+id/indoor_game_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_size"
                    android:layout_marginLeft="@dimen/default_margin_size"
                    android:layout_marginRight="@dimen/default_margin_size"
                    android:layout_marginStart="@dimen/default_margin_size"
                    android:layout_marginTop="@dimen/default_margin_size"
                    android:text="@string/indoor_card_title"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/default_text_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_size"
                    android:gravity="top|end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/start_official_indoor_game_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/small_margin_size"
                        android:layout_marginLeft="@dimen/small_margin_size"
                        android:layout_marginRight="@dimen/small_margin_size"
                        android:layout_marginStart="@dimen/small_margin_size"
                        android:drawablePadding="@dimen/small_margin_size"
                        android:onClick="startOfficialIndoorGame"
                        android:text="@string/new_match"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_text_size"/>

                    <Button
                        android:id="@+id/start_custom_indoor_game_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/small_margin_size"
                        android:layout_marginLeft="@dimen/small_margin_size"
                        android:layout_marginRight="@dimen/small_margin_size"
                        android:layout_marginStart="@dimen/small_margin_size"
                        android:onClick="startCustomIndoorGame"
                        android:text="@string/new_match_my_rule"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_text_size"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorBackgroundCardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/beach_game_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_image_height"
                    android:contentDescription="@string/beach_description"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/beach"/>

                <TextView
                    android:id="@+id/beach_game_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_size"
                    android:layout_marginLeft="@dimen/default_margin_size"
                    android:layout_marginRight="@dimen/default_margin_size"
                    android:layout_marginStart="@dimen/default_margin_size"
                    android:layout_marginTop="@dimen/default_margin_size"
                    android:text="@string/beach_card_title"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/default_text_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_size"
                    android:gravity="top|end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/start_official_beach_game_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/small_margin_size"
                        android:layout_marginLeft="@dimen/small_margin_size"
                        android:layout_marginRight="@dimen/small_margin_size"
                        android:layout_marginStart="@dimen/small_margin_size"
                        android:drawablePadding="@dimen/small_margin_size"
                        android:onClick="startOfficialBeachGame"
                        android:text="@string/new_match"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_text_size"/>

                    <Button
                        android:id="@+id/start_custom_beach_game_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/small_margin_size"
                        android:layout_marginLeft="@dimen/small_margin_size"
                        android:layout_marginRight="@dimen/small_margin_size"
                        android:layout_marginStart="@dimen/small_margin_size"
                        android:onClick="startCustomBeachGame"
                        android:text="@string/new_match_my_rule"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/small_text_size"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/colorAccent"
        app:itemTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:itemTextColor="@color/colorPrimaryText"
        app:menu="@menu/navigation_menu_main"/>


</android.support.v4.widget.DrawerLayout>
