<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context="com.tonkar.volleyballreferee.ui.data.RecordedIndoorGameActivity">

    <TextView
        android:id="@+id/game_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/tiny_margin_size"
        android:gravity="center"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/small_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/home_team_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/big_text_size"/>

        <TextView
            android:id="@+id/home_team_set_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin_size"
            android:layout_weight="1"
            android:elevation="@dimen/number_text_elevation"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/big_text_size"/>

        <TextView
            android:id="@+id/guest_team_set_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin_size"
            android:layout_weight="1"
            android:elevation="@dimen/number_text_elevation"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/big_text_size"/>

        <TextView
            android:id="@+id/guest_team_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/big_text_size"/>

    </LinearLayout>

    <TextView
        android:id="@+id/game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/small_text_size"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/indoor_game_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/DynamicTabText"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:id="@+id/indoor_game_pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="top|center"
                                       android:layout_margin="@dimen/default_margin_size"/>

</LinearLayout>
