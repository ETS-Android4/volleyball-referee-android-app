<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:descendantFocusability="blocksDescendants"
             android:transitionName="listItemToDetails">

    <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin_size"
            app:contentPadding="@dimen/default_margin_size"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="@dimen/default_margin_size">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_size"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipSpacing="@dimen/default_margin_size">

                    <com.google.android.material.chip.Chip
                            style="@style/IconChip"
                            android:id="@+id/game_status_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_live"
                            app:chipBackgroundColor="@color/colorLiveLight"/>

                    <com.google.android.material.chip.Chip
                            style="@style/IconChip"
                            android:id="@+id/game_kind_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_beach"
                            app:chipIconTint="@color/colorOnSurface"
                            app:chipBackgroundColor="@color/colorBeachLight"/>

                    <com.google.android.material.chip.Chip
                            style="@style/IconChip"
                            android:id="@+id/game_gender_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_mixed"
                            app:chipBackgroundColor="@color/colorMixedLight"
                            android:visibility="visible"/>

                </com.google.android.material.chip.ChipGroup>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/scheduled_game_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextViewTheme"
                        android:textSize="@dimen/small_text_size"/>
            </LinearLayout>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/small_margin_size"
                    android:layout_marginBottom="@dimen/small_margin_size"
                    android:background="@color/colorDisabledButton"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/scheduled_game_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextViewTheme"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/big_text_size"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/scheduled_game_league"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/small_text_size"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>