<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setup.ScheduledGameActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_size"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/date_input_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ScheduleButtonTheme" />

        <Button
            android:id="@+id/time_input_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ScheduleButtonTheme" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size">

        <com.tonkar.volleyballreferee.ui.TextInputAutoCompleteTextView
            android:id="@+id/league_name_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/league_name_hint"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size">

        <com.tonkar.volleyballreferee.ui.TextInputAutoCompleteTextView
            android:id="@+id/division_name_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/division_name_hint"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/gender_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/gender_description"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size" />

        <ImageButton
            android:id="@+id/switch_gender_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/gender_description"
            android:elevation="@dimen/round_button_elevation"
            android:theme="@style/ImageButtonTheme"
            app:srcCompat="@drawable/ic_mixed" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_team_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_size"
        android:layout_marginRight="@dimen/default_margin_size"
        android:text="@string/home_team_hint"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/default_text_size" />

    <Spinner
        android:id="@+id/home_team_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="@dimen/default_margin_size"
        android:layout_marginRight="@dimen/default_margin_size"
        android:spinnerMode="dialog"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/guest_team_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_size"
        android:layout_marginRight="@dimen/default_margin_size"
        android:layout_marginTop="@dimen/default_margin_size"
        android:text="@string/guest_team_hint"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/default_text_size" />

    <Spinner
        android:id="@+id/guest_team_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="@dimen/default_margin_size"
        android:layout_marginRight="@dimen/default_margin_size"
        android:spinnerMode="dialog"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/rules_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_size"
        android:layout_marginRight="@dimen/default_margin_size"
        android:layout_marginTop="@dimen/default_margin_size"
        android:text="@string/rules_name_hint"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/default_text_size" />

    <Spinner
        android:id="@+id/rules_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="@dimen/default_margin_size"
        android:layout_marginRight="@dimen/default_margin_size"
        android:spinnerMode="dialog"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/referee_name_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/pref_referee_name"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>

</ScrollView>