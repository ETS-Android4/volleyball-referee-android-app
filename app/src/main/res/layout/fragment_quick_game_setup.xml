<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/empty_fab_space">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size"
            android:gravity="top|center"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/home_team_name_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/home_team_name_input_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/home_team_hint"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/default_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/home_team_color_button"
                    style="@style/VbrFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin_size"
                    app:fabCustomSize="@dimen/form_button_size"
                    app:maxImageSize="@dimen/form_fab_icon_size"
                    app:srcCompat="@drawable/ic_shirt_color"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/home_team_captain_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:baselineAligned="false">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_team_captain_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/select_captain"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/default_text_size"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_team_captain_number_button"
                    android:layout_width="@dimen/form_button_size"
                    android:layout_height="@dimen/form_button_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/small_margin_size"
                    android:textSize="@dimen/default_text_size"
                    app:cornerRadius="@dimen/form_button_radius"
                    style="@style/VbrButton"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/guest_team_name_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/guest_team_name_input_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/guest_team_hint"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/default_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/guest_team_color_button"
                    style="@style/VbrFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin_size"
                    app:fabCustomSize="@dimen/form_button_size"
                    app:maxImageSize="@dimen/form_fab_icon_size"
                    app:srcCompat="@drawable/ic_shirt_color"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/guest_team_captain_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:baselineAligned="false">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/guest_team_captain_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/select_captain"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/default_text_size"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/guest_team_captain_number_button"
                    android:layout_width="@dimen/form_button_size"
                    android:layout_height="@dimen/form_button_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/small_margin_size"
                    android:textSize="@dimen/default_text_size"
                    app:cornerRadius="@dimen/form_button_radius"
                    style="@style/VbrButton"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/switch_gender_button"
                style="@style/VbrFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="@dimen/small_margin_size"
                android:contentDescription="@string/gender_description"
                app:backgroundTint="@android:color/white"
                app:fabCustomSize="@dimen/form_button_size"
                app:maxImageSize="@dimen/form_fab_icon_size"
                app:srcCompat="@drawable/ic_mixed"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/league_name_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/league_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/default_text_size"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/division_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/division_name_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/division_name"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/default_text_size"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/referee_spinner_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/referee"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size"/>

        <Spinner
                android:id="@+id/referee_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginEnd="@dimen/small_margin_size"
                android:layout_marginStart="@dimen/small_margin_size"
                android:prompt="@string/referee"
                android:spinnerMode="dialog"
                android:textColor="@color/colorDisabledText"
                android:textSize="@dimen/default_text_size"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_size"
                android:layout_marginTop="@dimen/default_margin_size"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:baselineAligned="false">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/match_duration_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/match_duration_text"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/default_text_size"/>

            <NumberPicker
                    android:id="@+id/match_duration_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/small_margin_size"
                    android:descendantFocusability="blocksDescendants"
                    android:theme="@style/NumberPickerTheme"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>