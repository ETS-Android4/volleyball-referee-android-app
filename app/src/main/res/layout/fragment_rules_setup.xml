<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top|center"
              android:orientation="vertical"
              android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:text="@string/general_rules"
            android:textAllCaps="true"
            android:textAppearance="@style/TextViewTheme"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rules_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/rules_name_input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/rules_name_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:textColor="@color/colorPrimary"
                android:importantForAutofill="no"
                android:textSize="@dimen/default_text_size"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_sets_per_game"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_sets_per_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_sets_per_game"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_points_per_set"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_points_per_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_points_per_set"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/rules_tie_break"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size"
            android:text="@string/rules_tie_break"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_points_in_tie_break"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_points_in_tie_break"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_points_in_tie_break"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/rules_two_points_difference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size"
            android:text="@string/rules_two_points_difference"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/rules_sanctions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size"
            android:text="@string/rules_sanctions"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/timeout_rules"
            android:textAllCaps="true"
            android:textAppearance="@style/TextViewTheme"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/rules_team_timeouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size"
            android:text="@string/rules_team_timeouts"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_team_timeouts_per_set"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_team_timeouts_per_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_team_timeouts_per_set"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_team_timeout_duration"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_team_timeout_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_team_timeout_duration"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/rules_technical_timeouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size"
            android:text="@string/rules_technical_timeouts"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_technical_timeout_duration"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_technical_timeout_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_technical_timeout_duration"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/rules_game_intervals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin_size"
            android:text="@string/rules_game_intervals"
            android:textColor="@color/colorOnSurface"
            android:textSize="@dimen/default_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:layout_marginTop="@dimen/big_margin_size"
            android:text="@string/rules_game_intervals_duration"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>
    <Spinner
            android:id="@+id/rules_game_intervals_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big_margin_size"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginStart="@dimen/big_margin_size"
            android:prompt="@string/rules_game_intervals_duration"
            android:spinnerMode="dialog"
            android:textColor="@color/colorDisabledText"
            android:textSize="@dimen/default_text_size"/>

    <LinearLayout
            android:id="@+id/indoor_rules_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/indoor_rules"
                android:textAllCaps="true"
                android:textAppearance="@style/TextViewTheme"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/rules_substitutions_limitation"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size"/>
        <Spinner
                android:id="@+id/rules_substitutions_limitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:prompt="@string/rules_substitutions_limitation"
                android:spinnerMode="dialog"
                android:textColor="@color/colorDisabledText"
                android:textSize="@dimen/default_text_size"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rules_substitutions_limitation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/small_margin_size"
                android:drawablePadding="@dimen/default_margin_size"
                android:drawableTint="@color/colorPrimary"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/small_text_size"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/rules_team_substitutions_per_set"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size"/>
        <Spinner
                android:id="@+id/rules_team_substitutions_per_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:prompt="@string/rules_team_substitutions_per_set"
                android:spinnerMode="dialog"
                android:textColor="@color/colorDisabledText"
                android:textSize="@dimen/default_text_size"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/rules_consecutive_serves_per_player"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size"/>
        <Spinner
                android:id="@+id/rules_consecutive_serves_per_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:prompt="@string/rules_consecutive_serves_per_player"
                android:spinnerMode="dialog"
                android:textColor="@color/colorDisabledText"
                android:textSize="@dimen/default_text_size"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/beach_rules_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/beach_rules"
                android:textAllCaps="true"
                android:textAppearance="@style/TextViewTheme"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold"/>

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/rules_court_switches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/big_margin_size"
                android:text="@string/rules_court_switches"
                android:textColor="@color/colorOnSurface"
                android:textSize="@dimen/default_text_size"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/rules_court_switch_frequency"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size"/>
        <Spinner
                android:id="@+id/rules_court_switch_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:prompt="@string/rules_court_switch_frequency"
                android:spinnerMode="dialog"
                android:textColor="@color/colorDisabledText"
                android:textSize="@dimen/default_text_size"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:layout_marginTop="@dimen/big_margin_size"
                android:text="@string/rules_court_switch_frequency_tie_break"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size"/>
        <Spinner
                android:id="@+id/rules_court_switch_frequency_tie_break"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/big_margin_size"
                android:layout_marginEnd="@dimen/big_margin_size"
                android:layout_marginStart="@dimen/big_margin_size"
                android:prompt="@string/rules_court_switch_frequency_tie_break"
                android:spinnerMode="dialog"
                android:textColor="@color/colorDisabledText"
                android:textSize="@dimen/default_text_size"/>

    </LinearLayout>

</LinearLayout>