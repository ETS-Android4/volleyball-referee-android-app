<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonkar.volleyballreferee.ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                app:cardBackgroundColor="@color/colorBackgroundCardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tiny_margin_size"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <ImageView
                        android:id="@+id/indoor_game_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/indoor" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_indoor_6x6_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="startIndoorGame"
                            android:text="@string/new_volleyball_game"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorPrimary"
                            app:icon="@drawable/ic_6x6"
                            app:iconTint="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_indoor_4x4_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="startIndoor4x4Game"
                            android:text="@string/new_volleyball_game"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorPrimary"
                            app:icon="@drawable/ic_4x4"
                            app:iconTint="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_score_based_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="startScoreBasedGame"
                            android:text="@string/new_score_based_game"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorPrimary"
                            app:icon="@drawable/ic_volley_ball"
                            app:iconTint="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                app:cardBackgroundColor="@color/colorBackgroundCardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/tiny_margin_size"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <ImageView
                        android:id="@+id/beach_game_image"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/main_image_height"
                        android:layout_weight="3"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/beach" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_beach_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="startBeachGame"
                            android:text="@string/new_beach_volleyball_game"
                            android:textColor="@color/colorPrimaryText"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorBeach"
                            app:icon="@drawable/ic_sun"
                            app:iconTint="@color/colorPrimaryText" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                app:cardBackgroundColor="@color/colorBackgroundCardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tiny_margin_size"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <ImageView
                        android:id="@+id/misc_game_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:scaleType="fitCenter"
                        app:srcCompat="@mipmap/ic_launcher_foreground" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_time_based_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="startTimeBasedGame"
                            android:text="@string/new_time_based_game"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorPrimaryText"
                            app:icon="@drawable/ic_time_based"
                            app:iconTint="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_scheduled_code_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="startScheduledGameFromCode"
                            android:text="@string/new_scheduled_game_from_code"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorWeb"
                            app:icon="@drawable/ic_scheduled_code"
                            app:iconTint="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_scheduled_list_game_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="goToScheduledGames"
                            android:text="@string/user_scheduled_games_title"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorWeb"
                            app:icon="@drawable/ic_scheduled_list"
                            app:iconTint="@android:color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_purchase_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin_size"
                            android:onClick="goToPurchases"
                            android:text="@string/purchase"
                            android:textColor="@android:color/white"
                            android:theme="@style/ButtonTheme.Primary"
                            app:backgroundTint="@color/colorWeb"
                            app:icon="@drawable/ic_purchase"
                            app:iconTint="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/colorAccent"
        app:itemTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:itemTextColor="@color/colorPrimaryText"
        app:menu="@menu/navigation_menu_main">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>