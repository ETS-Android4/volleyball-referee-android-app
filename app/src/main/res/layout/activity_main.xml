<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="top|center"
              android:orientation="vertical"
              android:weightSum="2"
              tools:context="com.tonkar.volleyballreferee.ui.MainActivity">

    <android.support.v7.widget.CardView
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="7">

            <ImageView
                android:id="@+id/indoor_game_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:contentDescription="@string/indoor_description"
                android:onClick="startOfficialIndoorGame"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/indoor"
                tools:layout_height="0dp"/>

            <TextView
                android:id="@+id/indoor_game_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/indoor_game"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/colorPrimaryTextDefaultMaterialLight"
                android:textSize="18sp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="1">

                <Button
                    android:id="@+id/start_official_indoor_game_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="startOfficialIndoorGame"
                    android:text="@string/official_rules"
                    android:textColor="@color/colorButtonMain"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/start_custom_indoor_game_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="startCustomIndoorGame"
                    android:text="@string/my_rules"
                    android:textColor="@color/colorButtonMain"
                    android:textSize="14sp"/>
            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="7">

            <ImageView
                android:id="@+id/beach_game_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:contentDescription="@string/beach_description"
                android:onClick="startOfficialBeachGame"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/beach"
                tools:layout_height="0dp"/>

            <TextView
                android:id="@+id/beach_game_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/beach_game"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/colorPrimaryTextDefaultMaterialLight"
                android:textSize="18sp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/start_official_beach_game_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="startOfficialBeachGame"
                    android:text="@string/official_rules"
                    android:textColor="@color/colorButtonMain"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/start_custom_beach_game_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="startCustomBeachGame"
                    android:text="@string/my_rules"
                    android:textColor="@color/colorButtonMain"
                    android:textSize="14sp"/>
            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
