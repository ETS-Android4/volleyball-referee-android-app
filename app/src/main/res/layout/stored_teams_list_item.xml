<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/big_margin_size">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stored_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|start"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/default_text_size"/>

    <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="@dimen/default_margin_size">

        <com.google.android.material.chip.Chip
                style="@style/IconChip"
                android:id="@+id/beach_team_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_beach"
                app:chipIconTint="@color/colorOnSurface"
                app:chipBackgroundColor="@color/colorBeach"/>

        <com.google.android.material.chip.Chip
                style="@style/TextChip"
                android:id="@+id/indoor_6x6_team_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6x6"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/colorIndoor"/>

        <com.google.android.material.chip.Chip
                style="@style/TextChip"
                android:id="@+id/indoor_4x4_team_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4x4"
                android:textColor="@android:color/white"
                app:chipBackgroundColor="@color/colorIndoor4x4"/>

        <com.google.android.material.chip.Chip
                style="@style/IconChip"
                android:id="@+id/gender_team_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_mixed"
                app:chipIconTint="@android:color/white"
                app:chipBackgroundColor="@color/colorMixed"
                android:visibility="visible"/>

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>