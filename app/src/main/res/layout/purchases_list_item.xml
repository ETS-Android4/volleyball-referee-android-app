<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            style="@style/RoundedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin_size"
            app:contentPadding="@dimen/default_margin_size">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/purchase_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_size"
                    android:textAppearance="@style/TextViewTheme"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/big_text_size"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/purchase_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_size"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/default_text_size"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/purchase_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/purchase"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@color/colorPrimary"
                    app:iconTint="@color/colorPrimary"
                    app:strokeColor="@color/colorPrimary"
                    app:icon="@drawable/ic_purchase"
                    android:textSize="@dimen/small_text_size"
                    android:textAllCaps="false"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>