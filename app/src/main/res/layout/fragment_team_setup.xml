<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/default_margin_size"
              android:gravity="top|center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/team_name_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size"/>

        <Button
            android:id="@+id/team_color_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:theme="@style/TeamButtonTheme"/>

    </LinearLayout>

    <TextView
        android:id="@+id/team_member_numbers_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:text="@string/select_players"
        android:textAppearance="@style/TextViewTheme"
        android:textSize="@dimen/default_text_size"/>

    <GridView
        android:id="@+id/team_member_numbers_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin_size"
        android:columnWidth="@dimen/player_big_column_width"
        android:gravity="center"
        android:horizontalSpacing="@dimen/default_margin_size"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/default_margin_size"/>

</LinearLayout>