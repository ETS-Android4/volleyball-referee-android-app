<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/team_setup_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:gravity="top|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/team_name_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <com.tonkar.volleyballreferee.ui.util.ClearableTextInputAutoCompleteTextView
                    android:id="@+id/team_name_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_clear"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/default_text_size" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/team_color_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin_size"
                    android:adjustViewBounds="true"
                    app:fabCustomSize="@dimen/form_button_size"
                    app:maxImageSize="@dimen/form_fab_icon_size"
                    app:srcCompat="@drawable/ic_shirt_color" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/select_gender_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/select_gender"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/select_gender_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin_size"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/gender_description"
                    app:backgroundTint="@android:color/white"
                    app:fabCustomSize="@dimen/form_button_size"
                    app:maxImageSize="@dimen/form_fab_icon_size"
                    app:srcCompat="@drawable/ic_mixed" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/team_member_numbers_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_size"
            android:text="@string/select_players"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size"/>

        <view
            android:id="@+id/team_member_numbers_grid"
            class="com.tonkar.volleyballreferee.ui.util.ExpandedGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_margin_size"
            android:columnWidth="@dimen/form_button_size"
            android:gravity="center"
            android:horizontalSpacing="@dimen/default_margin_size"
            android:numColumns="auto_fit"
            android:verticalSpacing="@dimen/default_margin_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/team_captain_number_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/select_captain"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/team_captain_number_button"
                    android:layout_width="@dimen/form_button_size"
                    android:layout_height="@dimen/form_button_size"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/small_margin_size"
                    android:layout_marginTop="@dimen/small_margin_size"
                    android:textSize="@dimen/default_text_size"
                    android:theme="@style/ButtonTheme.Team" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/team_libero_numbers_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/select_libero"
                android:textAppearance="@style/TextViewTheme"
                android:textSize="@dimen/default_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/libero_color_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin_size"
                    android:adjustViewBounds="true"
                    app:fabCustomSize="@dimen/form_button_size"
                    app:maxImageSize="@dimen/form_fab_icon_size"
                    app:srcCompat="@drawable/ic_shirt_color" />

            </LinearLayout>

        </LinearLayout>

        <view
            android:id="@+id/team_libero_numbers_grid"
            class="com.tonkar.volleyballreferee.ui.util.ExpandedGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_margin_size"
            android:layout_marginTop="@dimen/default_margin_size"
            android:columnWidth="@dimen/form_button_size"
            android:gravity="center"
            android:horizontalSpacing="@dimen/default_margin_size"
            android:numColumns="auto_fit"
            android:verticalSpacing="@dimen/default_margin_size"/>

    </LinearLayout>
</ScrollView>