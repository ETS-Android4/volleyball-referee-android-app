<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/beach_court"
              android:baselineAligned="false"
              android:gravity="center"
              android:orientation="horizontal"
              android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/beach_court_x_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/beach_court_y_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/left_team_service_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_volley_ball"/>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <ImageView
                        android:id="@+id/left_team_sanction_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/left_team_position_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin_size"
                        android:textSize="@dimen/court_position_size"
                        app:cornerRadius="@dimen/form_button_radius"
                        android:theme="@style/ButtonTheme.Team" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/beach_court_y_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/left_team_service_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_volley_ball"/>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <ImageView
                        android:id="@+id/left_team_sanction_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/left_team_position_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin_size"
                        android:textSize="@dimen/court_position_size"
                        app:cornerRadius="@dimen/form_button_radius"
                        android:theme="@style/ButtonTheme.Team" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/beach_court_x_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/beach_court_y_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <ImageView
                        android:id="@+id/right_team_sanction_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/right_team_position_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin_size"
                        android:textSize="@dimen/court_position_size"
                        app:cornerRadius="@dimen/form_button_radius"
                        android:theme="@style/ButtonTheme.Team" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/right_team_service_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_volley_ball"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/beach_court_y_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                <ImageView
                        android:id="@+id/right_team_sanction_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/right_team_position_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin_size"
                        android:textSize="@dimen/court_position_size"
                        app:cornerRadius="@dimen/form_button_radius"
                        android:theme="@style/ButtonTheme.Team" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/right_team_service_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_volley_ball"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
