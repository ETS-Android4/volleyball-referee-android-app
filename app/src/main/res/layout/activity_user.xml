<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonkar.volleyballreferee.ui.user.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size"
            app:cardBackgroundColor="@color/colorBackgroundCardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_margin_size"
                android:gravity="top|center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/big_margin_size"
                    android:layout_marginLeft="@dimen/small_margin_size"
                    android:layout_marginStart="@dimen/small_margin_size"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="4"
                        android:paddingBottom="@dimen/default_margin_size"
                        android:paddingTop="@dimen/default_margin_size"
                        android:text="@string/user_scheduled_games_title"
                        android:textAppearance="@style/TextViewTheme"
                        android:textSize="@dimen/big_text_size" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        app:srcCompat="@mipmap/ic_launcher_foreground" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/small_margin_size"
                    android:layout_marginStart="@dimen/small_margin_size"
                    android:autoLink="web"
                    android:paddingBottom="@dimen/big_margin_size"
                    android:text="@string/user_scheduled_games_message"
                    android:textAppearance="@style/TextViewTheme"
                    android:textSize="@dimen/small_text_size" />

                <Button
                    android:id="@+id/start_scheduled_list_game_button"
                    style="@style/MainActivityButton.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin_size"
                    android:drawableLeft="@drawable/ic_scheduled_list"
                    android:drawablePadding="@dimen/small_margin_size"
                    android:onClick="goToScheduledGames"
                    android:text="@string/user_scheduled_games_title" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/default_margin_size"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="@dimen/default_margin_size"
            android:onClick="signOut"
            android:text="@string/sign_out"
            android:theme="@style/SignOutButtonTheme" />

    </LinearLayout>


</ScrollView>