<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/default_margin_size"
              android:gravity="top|center"
              android:orientation="vertical"
              tools:context="com.tonkar.volleyballreferee.ui.team.QuickTeamsSetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/home_team_name_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/home_team_hint"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size"/>

        <Button
            android:id="@+id/home_team_color_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="selectHomeTeamColor"
            android:textSize="@dimen/default_text_size"
            android:theme="@style/TeamButtonTheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/guest_team_name_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/guest_team_hint"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_text_size"/>

        <Button
            android:id="@+id/guest_team_color_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="selectGuestTeamColor"
            android:textSize="@dimen/default_text_size"
            android:theme="@style/TeamButtonTheme"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/switch_gender_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/default_margin_size"
        android:adjustViewBounds="true"
        android:contentDescription="@string/gender_description"
        android:elevation="@dimen/cardview_default_elevation"
        android:onClick="switchGender"
        android:theme="@style/ImageButtonTheme"
        app:srcCompat="@drawable/ic_mixed"/>

</LinearLayout>