<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:gravity="top|center"
              android:orientation="vertical"
              tools:context="com.tonkar.volleyballreferee.ui.team.QuickTeamsSetupActivity">

    <Button
        android:id="@+id/next_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="validateTeams"
        android:text="@string/next"
        android:textSize="16sp"
        android:theme="@style/MainButtonTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/home_team_name_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/home_team_hint"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/home_team_color_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/guest_team_name_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/guest_team_hint"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/guest_team_color_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
