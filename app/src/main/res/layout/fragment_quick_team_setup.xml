<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_size"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="4">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/team_name_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/team_name_input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/home_team_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/default_text_size" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/team_color_button"
                android:layout_width="@dimen/color_button_size"
                android:layout_height="@dimen/color_button_size"
                android:layout_margin="@dimen/small_margin_size"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:elevation="@dimen/round_button_elevation"
                android:textSize="@dimen/default_text_size"
                android:theme="@style/RoundButtonTheme"
                app:srcCompat="@drawable/ic_shirt_color" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/team_captain_number_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/select_captain"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/team_captain_number_button"
                android:layout_width="@dimen/color_button_size"
                android:layout_height="@dimen/color_button_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/small_margin_size"
                android:background="@drawable/round_button"
                android:elevation="@dimen/round_button_elevation"
                android:textSize="@dimen/default_text_size"
                android:theme="@style/RoundButtonTheme" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/select_gender_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/select_gender"
            android:textAppearance="@style/TextViewTheme"
            android:textSize="@dimen/default_text_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/select_gender_button"
                android:layout_width="@dimen/color_button_size"
                android:layout_height="@dimen/color_button_size"
                android:layout_margin="@dimen/small_margin_size"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:contentDescription="@string/gender_description"
                android:elevation="@dimen/round_button_elevation"
                android:textSize="@dimen/default_text_size"
                android:theme="@style/RoundButtonTheme"
                app:srcCompat="@drawable/ic_shirt_color" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>