<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/default_margin_size"
              android:gravity="top|center"
              android:orientation="vertical"
              tools:context="com.tonkar.volleyballreferee.ui.team.LiberosSetupActivity">

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:minWidth="@dimen/next_button_min_width"
        android:onClick="validateLiberos"
        android:text="@string/next"
        android:textSize="@dimen/default_text_size"
        android:theme="@style/ButtonTheme"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/libero_setup_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:id="@+id/libero_setup_pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="top|center"
                                       android:layout_margin="@dimen/default_margin_size"/>

</LinearLayout>
