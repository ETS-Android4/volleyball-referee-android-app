<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/default_margin_size"
              android:gravity="top|center"
              android:orientation="vertical"
              tools:context="com.tonkar.volleyballreferee.ui.team.TeamsSetupActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/switch_gender_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/big_margin_size"
            android:layout_marginRight="@dimen/big_margin_size"
            android:adjustViewBounds="true"
            android:contentDescription="@string/gender_description"
            android:elevation="@dimen/cardview_default_elevation"
            android:onClick="switchGender"
            android:theme="@style/ImageButtonTheme"
            app:srcCompat="@drawable/ic_ladies"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/next_button_min_width"
            android:onClick="validateTeams"
            android:text="@string/next"
            android:textSize="@dimen/default_text_size"
            android:theme="@style/ButtonTheme"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/team_setup_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:id="@+id/team_setup_pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="top|center"
                                       android:layout_margin="@dimen/default_margin_size"/>

</LinearLayout>
