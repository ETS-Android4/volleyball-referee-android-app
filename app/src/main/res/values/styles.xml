<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorButtonMain</item>
        <item name="colorAccent">@color/colorButtonMain</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="TeamTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/holo_red_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="ImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorAccent">@color/colorButtonNormal</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Preferences" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
