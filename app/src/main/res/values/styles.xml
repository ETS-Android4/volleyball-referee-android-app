<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@drawable/button_color</item>
        <item name="colorAccent">@drawable/button_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="TeamButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/holo_red_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="ImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorAccent">@color/colorButtonDisabled</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="TextViewTheme" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.Preferences" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

</resources>
