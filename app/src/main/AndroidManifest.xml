<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tonkar.volleyballreferee">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.Preferences" />
        <activity
            android:name=".ui.setup.QuickGameSetupActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.setup.GameSetupActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.game.GameActivity" />
        <activity android:name=".ui.game.TimeBasedGameActivity" />
        <activity
            android:name=".ui.data.RecordedGamesListActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.data.RecordedIndoorGameActivity"
            android:parentActivityName=".ui.data.RecordedGamesListActivity" />
        <activity
            android:name=".ui.data.RecordedBeachGameActivity"
            android:parentActivityName=".ui.data.RecordedGamesListActivity" />
        <activity
            android:name=".ui.data.SavedTeamsListActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.data.SavedTeamActivity"
            android:parentActivityName=".ui.data.SavedTeamsListActivity" />
        <activity
            android:name=".ui.data.SavedRulesListActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.data.SavedRulesActivity"
            android:parentActivityName=".ui.data.SavedRulesListActivity" />
        <activity
            android:name=".ui.user.UserSignInActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.user.UserActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.user.ScheduledGamesListActivity"
            android:parentActivityName=".ui.user.UserActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.tonkar.volleyballreferee.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
    </application>

</manifest>